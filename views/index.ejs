<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
      <form action="/create " method="post">
        <input class="block px-3 py-2 bg-zinc-800 w-full rounded-md outline-none" type="text" placeholder="Title goes here.." name="title">
        <textarea class="block px-3 py-2 resize-none mt-2 bg-zinc-800 w-full rounded-md outline-none" placeholder="write your task details here.." name="details"></textarea>
        <input class="mt-2 px-5 py-2 rounded-md bg-blue-600" type="submit" value="Create task">
      </form> 
    </div>
    <div class="tasks p-10 flex gap-3">
      <% if(files.length > 0){ %>
        <% files.forEach(function(val){ %>
          <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
            <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
            <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read more</a>
          </div>
        <% }) %>
      <% } else{ %>
        <h1 class="text-zinc-600  ">No tasks yet..</h1>
      <% } %>
    </div>
  </div>
</body>
</html>